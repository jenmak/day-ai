{
  "name": "dripdropcity",
  "type": "module",
  "version": "0.0.0",
  "engines": {
    "node": "22.x"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/bun": "latest",
    "eslint": "^9.22.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript-eslint": "^8.26.1"
  },
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "packageManager": "bun@1.2.5",
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.2.8",
    "@trpc/client": "11.6.0",
    "@trpc/server": "11.6.0",
    "superjson": "^2.2.2"
  },
  "overrides": {
    "@trpc/server": "11.6.0",
    "@trpc/client": "11.6.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "start": "turbo start",
    "start:backend": "cd backend && bun server.js",
    "type-check": "turbo type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "install:all": "bun install && cd backend && bun install && cd ../frontend && bun install"
  }
}
