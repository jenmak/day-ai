{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": ["backend/**", "shared/**"],
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_20", "bun"],
          "nixLibs": ["glibc"]
        },
        "install": {
          "cmds": [
            "bun install --frozen-lockfile --ignore-scripts --no-cache --no-verify"
          ]
        },
        "build": {
          "cmds": [
            "echo 'Building shared package...'",
            "cd shared && bun run build",
            "echo 'Verifying shared package structure...'",
            "ls -la shared/",
            "echo 'Linking shared package to backend...'",
            "cd ../backend && bun install --frozen-lockfile --ignore-scripts --no-cache --no-verify",
            "echo 'Verifying backend can import shared package...'",
            "cd ../backend && bun -e 'import(\"@dripdropcity/shared/schemas\").then(() => console.log(\"✅ Shared package import successful\")).catch(e => console.error(\"❌ Shared package import failed:\", e))'",
            "echo 'Build completed successfully'"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "cd backend && bun server.js",
    "healthcheckPath": "/health/keys",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
