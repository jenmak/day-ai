{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": ["backend/**", "shared/**"],
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_20", "bun"],
          "nixLibs": ["glibc"]
        },
        "install": {
          "cmds": [
            "bun install --frozen-lockfile --ignore-scripts --no-cache --no-verify"
          ]
        },
        "build": {
          "cmds": [
            "echo 'Shared package - no build needed'",
            "echo 'Backend ready - no build needed'"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "cd backend && bun server.js",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
